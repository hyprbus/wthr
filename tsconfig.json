{
    "compilerOptions": {
      "outDir": "./dist/",
      "strict": true,
      "noUnusedLocals": true,
      "noUnusedParameters": true,
      "moduleResolution": "node",
      "sourceMap": true,
      "inlineSources": true,
      "noImplicitAny": true,
      "target": "es5",
      "jsx": "react",
      "lib": ["dom", "esnext"],
      "module": "esnext",
      "esModuleInterop": true,
      "allowJs": true,
      "allowSyntheticDefaultImports": true,
      "baseUrl": "src",
      "paths": { "@/*": ["*"] }
    },
    "include": [
        "./src",
        "./jest-setup.ts"
      ],
    "exclude": [
        "node_modules",
        "dist"
      ]
  }