{
    "compilerOptions": {
      "outDir": "./dist/",
      "strict": true,
      "noUnusedLocals": true,
      "noUnusedParameters": true,
      "moduleResolution": "node",
    "sourceMap": true,
    "inlineSources": true,
      "noImplicitAny": true,
      "module": "es6",
      "target": "es5",
      "jsx": "react",
      "allowJs": true,
      "allowSyntheticDefaultImports": true,
      "baseUrl": "src",
      "paths": { "@/*": ["*"] }
    },
    "include": [
        "./src"
      ],
    "exclude": [
        "node_modules",
        "dist"
      ]
  }